rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 개발/테스트 환경: 에뮬레이터에서는 모든 접근 허용
    // 프로덕션에서는 아래 규칙이 적용됨
    
    // 사용자 데이터 - 인증된 사용자만 자신의 데이터에 접근 가능
    match /users/{userId}/{document=**} {
      // 에뮬레이터 환경에서는 읽기 허용 (디버깅 용)
      allow read: if true;
      // 쓰기는 인증된 사용자 본인만 가능
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
